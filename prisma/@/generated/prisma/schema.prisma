generator client {
  provider = "prisma-client-js"
  output   = "@/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  role         Role?
  profileImage String?
  password     String
  createdAt    DateTime @default(now())
}

model Product {
  id           String @id @default(uuid())
  name         String
  basePrice    Float
  sellingPrice Float?
  description  String

  sku   String @unique
  image String

  isTrending      Boolean @default(false)
  isPremium       Boolean @default(false)
  isNew           Boolean @default(false)
  isEidCollection Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy String?
  updatedBy String?
}
